{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@spaceone/console-core-lib": ["packages/@spaceone/console-core-lib/dist/index.d.ts"],
      "@spaceone/console-core-lib/*": ["packages/@spaceone/console-core-lib/dist/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/assets",
    "packages",
    "**/*.stories.ts"
  ]
}
