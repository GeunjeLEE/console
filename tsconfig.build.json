{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"],
      "@spaceone/console-core-lib": ["packages/@spaceone/console-core-lib/dist/index.d.ts"],
      "@spaceone/console-core-lib/*": ["packages/@spaceone/console-core-lib/dist/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["packages", "node_modules", "src/**/*.stories.ts", "__tests__"]
}
